<h1> Ingredients </h1>

<form action="/ingredients" method="post">
  <label for="ingredient">Ingredient</label>
  <input type="text" name="ingredient" id="ingredient"placeholder="ex:Salt">
  <button type="submit" class="btn btn-danger">Submit</button>
</form>

<% if @ingredients == [] %>

  <p> Please add an ingredient </p>

<% else %>


<ul>

  <% @ingredients.each() do |ingredient|  %>

  <li><a href="/ingredient/<%= ingredient.id()%>"><%= ingredient.name() %></a>
    <form id="form_id" action="/ingredients" method="post">
      <input type="hidden" name="ingredient_id" value="<%= ingredient.id() %>">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-danger">Get it gone</button>
    </form>
  </li>

  <% end %>

</ul>

<% end %>
