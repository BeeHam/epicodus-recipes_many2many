<h2><%= @recipe.name() %></h2>

<form id="ingredient" action="/recipe/<%= @recipe.id() %>" method="post">
  <input type="hidden" name="recipe_id" id="recipe_id" value="<%= @recipe.id() %>">
  <label for="ingredient">Ingredient</label>
  <input type="text" name="ingredient" id="ingredient" placeholder="ex: Salt">
  <button name="submit" class="btn btn-danger">Add</button>
</form>

<% if @recipe.ingredients.any?() %>
  <h3>Ingredient List</h3>

  <ul>
    <% @recipe.ingredients.each() do |recipe_ingredient| %>
    <li> <%= recipe_ingredient.name() %> </li>
    <% end %>
  </ul>

<% else %>

  <p>Please add ingredients.</p>

<% end %>
