<h1> Recipes </h1>

<form action="/recipes" method="post">
  <label for="recipes">Recipe</label>
  <input type="text" name="recipes" id="recipes"placeholder="ex:Chicken Tacos!">
  <button type="submit" class="btn btn-danger">Submit</button>
</form>


<% if @recipes == [] %>

  <p>Please add a recipe.</p>

<% else %>

<ul>
  <% @recipes.each() do |recipe| %>

  <li><a href="/recipe/<%= recipe.id() %>"><%= recipe.name() %></a>
  <form id="form_id" action="/recipes" method="post">
    <input type="hidden" name="recipe_id" value="<%= recipe.id() %>">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" class="btn btn-danger">Get it gone</button>
  </form>
  </li>

  <% end %>

</ul>

<% end %>
